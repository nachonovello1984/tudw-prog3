<h2>🏐 Jugadores</h2>

<div style="clear: both; margin: 2rem 0rem ">
    <a class="btn" href="/jugadores/nuevo">Nuevo Jugador</a>
</div>

<table>
    <thead>
        <tr>
            <th><a href="/jugadores?orden=dorsal&asc={{asc}}">Dorsal</a></th>
            <th><a href="/jugadores?orden=apellido&asc={{asc}}">Apellido</a></th>
            <th><a href="/jugadores?orden=nombre&asc={{asc}}">Nombre</a></th>
            <th><a href="/jugadores?orden=pieHabil&asc={{asc}}">Pie Hábil</a></th>
        </tr>
    </thead>
    <tbody>
        {{#each jugadores}}
        <tr>
            <td>{{dorsal}}</td>
            <td>{{apellido}}</td>
            <td>{{nombre}}</td>
            <td>{{pieHabil}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>